# ===============================================
# BUSCAPREÇOS - CONFIGURAÇÕES DE AMBIENTE
# ===============================================
# 
# IMPORTANTE: 
# 1. Copie este arquivo para .env e configure com seus valores reais
# 2. NUNCA commite o arquivo .env com credenciais reais
# 3. Use valores seguros em produção
#

# ===============================================
# CONFIGURAÇÕES GERAIS DA APLICAÇÃO
# ===============================================

# Ambiente da aplicação (development, production, staging)
APP_ENV=development

# URL base da aplicação
APP_URL=http://localhost:8080

# Nome da aplicação
APP_NAME="Buscapreços"

# Debug mode (true/false)
APP_DEBUG=true

# Timezone da aplicação
APP_TIMEZONE=America/Sao_Paulo

# ===============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===============================================

# Configurações principais do MySQL
DB_HOST=db
DB_PORT=3306
DB_DATABASE=buscaprecos
DB_USERNAME=busca
DB_PASSWORD=busca_password

# Senha do root do MySQL (para backups e migrations)
DB_ROOT_PASSWORD=root_password_123

# ===============================================
# CONFIGURAÇÕES DE EMAIL (SMTP)
# ===============================================

# Configurações do servidor SMTP
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-do-app
MAIL_ENCRYPTION=tls

# Email remetente padrão
MAIL_FROM_ADDRESS=noreply@buscaprecos.com
MAIL_FROM_NAME="Buscapreços Sistema"

# ===============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===============================================

# Chave secreta para JWT/sessões (gere uma nova!)
APP_SECRET=your-secret-key-change-this-in-production-32chars

# Salt para hashing de senhas
PASSWORD_SALT=your-password-salt-change-this

# Configurações de sessão
SESSION_NAME=buscaprecos_session
SESSION_LIFETIME=7200

# ===============================================
# CONFIGURAÇÕES DO SUPABASE (se usar)
# ===============================================

# URL e chave do Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua-chave-anonima-do-supabase
SUPABASE_SERVICE_KEY=sua-chave-de-servico-do-supabase

# ===============================================
# CONFIGURAÇÕES DE APIS EXTERNAS
# ===============================================

# API do CATMAT (se usar)
CATMAT_API_URL=https://api.catmat.gov.br
CATMAT_API_KEY=sua-chave-da-api-catmat

# API de CEP (se usar)
CEP_API_URL=https://viacep.com.br/ws

# ===============================================
# CONFIGURAÇÕES DE UPLOAD E STORAGE
# ===============================================

# Diretório para uploads
UPLOAD_PATH=uploads
MAX_UPLOAD_SIZE=10M

# Tipos de arquivo permitidos (separados por vírgula)
ALLOWED_FILE_TYPES=pdf,xlsx,xls,csv,jpg,jpeg,png

# ===============================================
# CONFIGURAÇÕES DE LOG
# ===============================================

# Nível de log (debug, info, warning, error)
LOG_LEVEL=debug

# Arquivo de log
LOG_FILE=logs/app.log

# Rotação de logs (daily, weekly, monthly)
LOG_ROTATION=daily

# ===============================================
# CONFIGURAÇÕES DE CACHE
# ===============================================

# Driver de cache (file, redis, memcached)
CACHE_DRIVER=file

# Diretório de cache (se usar file)
CACHE_PATH=cache

# TTL padrão do cache (em segundos)
CACHE_TTL=3600

# ===============================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===============================================

# Configurações específicas para desenvolvimento
DEV_MODE=true

# Mostrar erros em tela (apenas desenvolvimento)
DISPLAY_ERRORS=true

# URL do Xdebug (se usar)
XDEBUG_HOST=host.docker.internal

# ===============================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===============================================

# SSL/HTTPS
FORCE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Domínio de produção
PRODUCTION_DOMAIN=buscaprecos.com.br

# ===============================================
# CONFIGURAÇÕES DO DOCKER
# ===============================================

# Portas para desenvolvimento
WEB_PORT=8080
DB_PORT=3306
APP_PORT=9000

# ===============================================
# CONFIGURAÇÕES DE BACKUP
# ===============================================

# Diretório para backups
BACKUP_PATH=backups

# Retenção de backups (em dias)
BACKUP_RETENTION_DAYS=30

# Backup automático (true/false)
AUTO_BACKUP=true

# ===============================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ===============================================

# Webhook URLs (se usar)
WEBHOOK_URL_SUCCESS=
WEBHOOK_URL_ERROR=

# Token para webhooks
WEBHOOK_TOKEN=your-webhook-token-here

# ===============================================
# VARIÁVEIS ESPECÍFICAS DO PROJETO
# ===============================================

# Configurações específicas do Buscapreços
DEFAULT_ADMIN_EMAIL=admin@buscaprecos.com
DEFAULT_ADMIN_PASSWORD=change-this-password

# Configurações de cotação
COTACAO_TIMEOUT_DAYS=30
MAX_FORNECEDORES_POR_COTACAO=10

# Configurações de relatórios
RELATORIO_LOGO_PATH=assets/logo.png
RELATORIO_ASSINATURA_PATH=assets/assinatura.png

# ===============================================
# NOTAS IMPORTANTES
# ===============================================
#
# 1. SEGURANÇA:
#    - Altere TODAS as senhas e chaves secretas
#    - Use senhas fortes em produção
#    - Nunca commite credenciais reais
#
# 2. PRODUÇÃO:
#    - Defina APP_ENV=production
#    - Defina APP_DEBUG=false
#    - Configure SSL adequadamente
#    - Use banco de dados dedicado
#
# 3. DESENVOLVIMENTO:
#    - Mantenha APP_ENV=development
#    - Use APP_DEBUG=true para debug
#    - Configure Xdebug se necessário
#
# 4. COMANDOS ÚTEIS:
#    - cp .env.example .env
#    - Edite .env com seus valores
#    - docker-compose up -d para iniciar
#