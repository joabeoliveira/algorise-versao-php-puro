{
    "name": "joabe/buscaprecos-php-puro",
    "description": "Sistema de busca de pre√ßos simplificado - PHP Puro",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Joabe\\Buscaprecos\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Joabe Oliveira"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpmailer/phpmailer": "^6.11",
        "phpoffice/phpspreadsheet": "^5.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "optimize-autoloader": true,
        "prefer-stable": true,
        "sort-packages": true
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
