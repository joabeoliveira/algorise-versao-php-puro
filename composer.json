{
    "name": "joabe/buscaprecos-php-puro",
    "description": "Sistema de busca de preços simplificado - PHP Puro",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Joabe\\Buscaprecos\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Joabe Oliveira"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpmailer/phpmailer": "^6.11",
        "phpoffice/phpspreadsheet": "^5.1",
        "vlucas/phpdotenv": "^5.6",
        "google/cloud-storage": "^1.30",
        "google/cloud-logging": "^1.25",
        "google/cloud-secret-manager": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "optimize-autoloader": true,
        "prefer-stable": true,
        "sort-packages": true
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "dev": [
            "@php -S localhost:8080 -t public"
        ],
        "dev:serve": [
            "echo 'Iniciando servidor de desenvolvimento...'",
            "@php -S localhost:8080 -t public"
        ],
        "dev:install": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "prod:build": [
            "composer install --no-dev --optimize-autoloader --no-interaction",
            "echo 'Build de produção concluído'"
        ],
        "prod:deploy": [
            "@prod:build",
            "echo 'Executando deploy...'",
            "gcloud app deploy app.yaml --quiet"
        ],
        "gcp-build": [
            "composer install --no-dev --optimize-autoloader"
        ],
        "test:env": [
            "@php -r \"echo 'Ambiente: ' . (isset(\\$_SERVER['GAE_ENV']) ? 'Google App Engine' : 'Local') . PHP_EOL;\""
        ]
    }
}
